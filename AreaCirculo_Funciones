#include <iostream>

using namespace std;

float areacirculo(float r);

int main()
{
   float radio;
   cout<<"Ingrese el radio del circulo: ";
   cin>>radio;
   cout<<"El area del circulo es: "<<areacirculo(radio);
   return 0;
}

float areacirculo(float r) {
    float aux;
    aux=r*3.1416;
    return aux;
}
