#include <iostream>
using namespace std;
void mostrarvector(int a[], int n){
    for (int i=0; i<5; i++){
        cout<<a[i]<<" ";
    }
}
void cargarvectorB(int b[], int n){
    cout<<"Cargando el vector B...."<<endl;
    for (int i=0; i<n; i++){
        cin>>b[i];
    }
}
void mostrarvectorB(int b[], int n){
    cout<<"Mostrando el vector B...."<<endl;
    for (int i=0; i<n; i++){
        cout<<b[i]<<" ";
    }
}    

void sumavectorAyB(int a[],int b[],int n){
    cout<<"Mostrando la suma de vector A y B...."<<endl;
    for (int i=0; i<n; i++){
        cout<<a[i] + b[i]<<" ";
    }
}
int mayorvectorA(int a[], int n){
    int mayor= a[0];
    for(int i=1; i<n; i++){
        if (a[i]>mayor){
            mayor=a[i];
        }
    }
    return mayor;
}
int menorvectorB(int b[], int n){
    int menor=b[0];
    for(int i=1; i<n; i++){
        if (b[i]<menor){
        menor=b[i];
        }
    }
    return menor;
}
int main () {
    int a[]= {1,3,6,2,8};
    int b[5];
    cargarvectorB(b, 5);
    mostrarvectorB(b, 5);
    
    sumavectorAyB(a,b,5);
    
    cout<<"El mayor del vector A es: "<<mayorvectorA(a,5)<<endl;
    cout<<"El menor del vector B es: "<<menorvectorB(b,5)<<endl;
    return 0;
}
